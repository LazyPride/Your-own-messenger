<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.s1cket.labs.client.controller.MenuController">
    <MenuBar fx:id="menuBar">
        <menus>
            <Menu text="Me">
                <items>
                    <MenuItem text="Profile" disable="true" onAction="#handleProfileAction"/>
                    <MenuItem text="Log out" disable="true" onAction="#handleLogOutAction"/>
                </items>
            </Menu>
            <Menu text="Contacts">
                <items>
                    <MenuItem text="Add contact" disable="true" onAction="#handleAddContactAction"/>
                    <SeparatorMenuItem  />
                    <MenuItem text="Create group" disable="true" onAction="#handleCreateGroupAction"/>
                    <MenuItem text="Join group" disable="true" onAction="#handleJoinGroupAction"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem text="About" onAction="#handleAboutAction"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>
</VBox>