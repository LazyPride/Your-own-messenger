<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.s1cket.labs.client.controller.user.misc.ContactManagerController"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="root">
    <VBox>
        <HBox>
            <Label text="Nickname: "/>
            <TextField fx:id="nicknameTextField"/>
        </HBox>
        <HBox>
            <Label text="Address: "/>
            <TextField fx:id="addressTextField"/>
        </HBox>
        <HBox>
            <Label text="PublicKey: "/>
            <TextField fx:id="publicKeyTextField"/>
        </HBox>
        <Label fx:id="notificationLabel"/>
        <HBox>
            <Button text="Add" onMouseClicked="#handleSave"/>
            <Button text="Close" onMouseClicked="#handleClose"/>
        </HBox>
    </VBox>
</AnchorPane>
